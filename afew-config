# vim:set ft=dosini:

[SpamFilter]
# Tags mails flagged as SPAM

[KillThreadsFilter]
# Kill replies to killed mails

[ListMailsFilter]
# Add list/<id> tags for mailing lists

[FolderNameFilter]
# Tags emails according to dirs that they are in
maildir_separator = /

[Filter.9]
message = Finish tagging by removing the new tag
tags = -new

[MailMover]
# Move mails according to notmuch queries
folders = gmail/inbox gmail/spam gmail/archive
gmail/inbox = 'NOT tag:inbox':gmail/archive
gmail/spam = 'NOT tag:spam AND tag:inbox':gmail/inbox 'NOT tag:spam':gmail/archive 'tag:trash':gmail/trash
gmail/archive = 'tag:trash':gmail/trash
